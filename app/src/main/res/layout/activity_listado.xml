<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white"
    tools:context=".ListadoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_green"
        android:padding="20dp"
        android:elevation="4dp">

        <!-- Título principal -->
        <TextView
            android:id="@+id/txtTitulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Contactos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/person_search_48px"
            android:drawablePadding="12dp"
            android:drawableTint="@android:color/white" />

        <!-- Contador de contactos -->
        <TextView
            android:id="@+id/txtContador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando contactos..."
            android:textSize="14sp"
            android:textColor="@color/background_light"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:alpha="0.9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/content_card_background"
            android:padding="0dp"
            android:layout_marginBottom="16dp">

            <!-- Header de la tarjeta de contenido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background_light"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/person_search_48px"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.7"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Directorio de Contactos"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/autorenew_48px"
                    android:alpha="0.5"
                    app:tint="@color/text_hint" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideInset"
                android:scrollbarThumbVertical="@color/border_color"
                android:fadeScrollbars="false"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="0.01"
                    android:text="Iniciando consulta de contactos..."
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:textIsSelectable="true" />

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <!-- Botón Actualizar con ícono -->
            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/actualizar_lista"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/primary_green"
                android:drawableLeft="@drawable/autorenew_48px"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/white"
                app:cornerRadius="12dp"
                android:elevation="2dp" />

            <!-- Botón Regresar con ícono -->
            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/regreso"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/text_secondary"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:drawablePadding="8dp"
                android:drawableTint="@android:color/white"
                app:cornerRadius="12dp"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>