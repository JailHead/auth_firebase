<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white"
    tools:context=".MainActivity">

    <!-- ✅ TOOLBAR CON NUEVA PALETA -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_green"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Gestión de Contactos"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- ✅ SECCIÓN SUPERIOR: Logo y Título -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_app_logo"
                    android:contentDescription="@string/titulo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center" />

            </LinearLayout>

            <!-- ✅ SECCIÓN FORMULARIO: Campos de Entrada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del Contacto"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"
                    android:drawableLeft="@drawable/person_search_48px"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <!-- Fila 1: Nombre y Apellidos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nombre"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/txtNombre"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="@string/nombre"
                            android:inputType="text|textAutoCorrect|textCapSentences"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:background="@drawable/input_field_small"
                            android:paddingHorizontal="12dp"
                            android:fontFamily="sans-serif"
                            android:importantForAutofill="no" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/apellidos"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/txtApellidos"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="@string/apellidos"
                            android:inputType="text|textAutoCorrect|textCapSentences"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:background="@drawable/input_field_small"
                            android:paddingHorizontal="12dp"
                            android:fontFamily="sans-serif"
                            android:importantForAutofill="no" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Fila 2: Teléfono y Correo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/telefono"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/txtTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="@string/telefono"
                            android:inputType="phone"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:background="@drawable/input_field_small"
                            android:paddingHorizontal="12dp"
                            android:fontFamily="sans-serif"
                            android:importantForAutofill="no" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sueldo"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/txtCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="@string/sueldo"
                            android:inputType="textEmailAddress"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:background="@drawable/input_field_small"
                            android:paddingHorizontal="12dp"
                            android:fontFamily="sans-serif"
                            android:importantForAutofill="no" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- ✅ SECCIÓN ACCIONES: Botones de Operaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acciones de Contacto"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical" />

                <!-- Fila 1: ImageButtons para operaciones CRUD -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="4dp">

                        <ImageButton
                            android:id="@+id/btnAgregar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/action_button_background"
                            android:src="@drawable/add_48px"
                            android:contentDescription="@string/agregar"
                            android:layout_marginBottom="4dp"
                            android:backgroundTint="@color/primary_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/agregar"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="4dp">

                        <ImageButton
                            android:id="@+id/btnBuscar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/action_button_background"
                            android:src="@drawable/person_search_48px"
                            android:contentDescription="@string/buscar"
                            android:layout_marginBottom="4dp"
                            android:backgroundTint="@color/accent_gold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/buscar"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="4dp">

                        <ImageButton
                            android:id="@+id/btnActualizar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/action_button_background"
                            android:src="@drawable/autorenew_48px"
                            android:contentDescription="@string/actualizar"
                            android:layout_marginBottom="4dp"
                            android:backgroundTint="@color/primary_green_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/actualizar"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="4dp">

                        <ImageButton
                            android:id="@+id/btnEliminar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/action_button_background"
                            android:src="@drawable/delete_48px"
                            android:contentDescription="@string/eliminar"
                            android:layout_marginBottom="4dp"
                            android:backgroundTint="@color/error_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/eliminar"
                            android:textSize="10sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Botón Lista más prominente -->
                <Button
                    android:id="@+id/btnLista"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/lista"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:backgroundTint="@color/primary_green_dark"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>